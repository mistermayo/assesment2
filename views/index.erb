<h1>Saved contacts</h1>
<ul>
  <% @contacts.each() do |contact| %>
  <li><a href="/contacts/<%= contact.id() %>"><%= contact.name() %></a></li>
  <% end %>
</ul>


<h2>Phonebook</h2>

<h3>Add a contact</h3>


<form action="/contacts" method="post">
  <label for='name'>Contact's name:</label>
  <input id='name' name='name' type='text'>
  <button type="submit">Add contact here! </button>
</form>
